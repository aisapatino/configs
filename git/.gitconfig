[advice]
  statusHints = false
[alias]
  # basics
  st = status
  ch = checkout
  a = add
  br = branch
  bra = branch --all
  # commit
  com = commit
  ca = commit --amend
  can = commit --amend -C HEAD
  # diffs
  d = diff
  dc = diff --cached
  ds = diff --stat
  # history
  l = log --format=\"%Cblue%h%Creset %C(bold green)%s% %Cred%d%Creset%n  %ad %an %n\" --date=relative
  lf = log --format=\"%n%Cblue%h%Creset %C(bold green)%s%Creset %Cred%d%Creset %n  %ad %an\" --date=relative --stat --name-status
  # pull, rebase
  pr = pull --rebase
  r = rebase
  ri = rebase -i
  rc = rebase --continue
  cp = cherry-pick
  # stash
  shows = stash show -p
  ss = stash save
  sp = stash pop
  sl = stash list
  sa = "!sh -c 'git stash apply stash@{$1}' -"
  sd = "!sh -c 'git stash drop stash@{$1}' -"
  # submodules
  sup = submodule update
  subst = submodule status
[blame]
  date = short
[color]
  ui = always
[core]
  autocrlf = false    # don't handle line endings, leave it to vim/editorconfig
  excludesfile = ~/.gitignore
  editor = vim
[credential]
  helper = cache --timeout=3600
[diff]
  renames = "copies"
  tool = gvimdiff
[difftool]
  prompt = false
[fetch]
  prune = true
[http]
  # prevent failures if repo is large
  postBuffer = 524288000
[merge]
  tool = fugitive
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "fugitive"]
  cmd = gvim -f -c \"Gdiff\" \"$MERGED\"
[push]
  default = simple
[rerere]
  enabled = true
[sequence]
  editor = gvim -f
