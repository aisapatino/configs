# Starting config. Copy it to ~/.config/git/gitk
# gitk will update that file after every exit and a symlink won't stay in place

# GENERAL
#---------

# fonts
set mainfont {Menlo 14}
set textfont {Menlo 14}
set uifont {{Sans} 12 bold}

# formatting
set datetimeformat {%m/%d/%Y %H:%M}
set tabstop 4

# color
set bgcolor white
set fgcolor black
set uicolor grey85
set uifgcolor black
set uifgdisabledcolor #999

set selectbgcolor gray85
set foundbgcolor yellow

# custom views
set permviews {{Chrono {} {--all --date-order} {}}}

# window sizes (updated every time you exit)
set geometry(main) 1940x1028+267+223
set geometry(state) normal
set geometry(topwidth) 1940
set geometry(topheight) 446
set geometry(pwsash0) "1205 1"
set geometry(pwsash1) "1721 1"
set geometry(botwidth) 1605
set geometry(botheight) 577

# UPPER
#-------

# circles
set circlecolors {"#06287e" "#dff0e6" gray "#1158a1" "#1158a1"}
set circleoutlinecolor #06287e
set mainheadcirclecolor #06287e
set indexcirclecolor #3a9281
set workingfilescirclecolor #f8f3a9

# lines
set colors {"#3a9281" "#06287e" "#1158a1" "#70f0b0" "#009000"}
set reflinecolor #06287e

# branch name
set headbgcolor #06287e
set headfgcolor white
set headoutlinecolor #06287e
set remotebgcolor #06287e

# tags
set tagbgcolor #5b40a6
set tagfgcolor white
set tagoutlinecolor white

# LOWER
#-------

set diffcolors {"#a70035" "#3a9281" "#06287e"}
set diffcontext 3

set filesepbgcolor #dddddd
set filesepfgcolor black

set linkfgcolor #1158a1

# "Parent" labels for merge commits
set mergecolors {"#06287e" "#3a9281"}

# search within selected commit's diff
set currentsearchhitbgcolor orange

# "show the origin of this line"
set markbgcolor #a0b0c0
