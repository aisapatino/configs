### APPEARANCE ################################################################

TERM=xterm-256color

### PROMPT ####################################################################

GIT_PS1_SHOWUPSTREAM=1 # indicate ahead/behind upstream
GIT_PS1_SHOWCOLORHINTS=1 # color like git status for untracked/modified

source ~/.git-prompt.sh

# \[\e[color\] = start coloring, \[\e[m\] = end coloring
PROMPT_COMMAND='__git_ps1 "\[\e[1;34m\]\w\[\e[m\]" " \[\e[1;34m\]$\[\e[m\] "'

#### AUTOCOMPLETE #############################################################

if [ -f ~/.git-completion.bash ]; then
  . ~/.git-completion.bash
fi

### ALIASES ###################################################################

alias g="git"
alias gk="gitk --all"
alias gca="git add . && git commit"
alias gs="git status"

alias t="tree -a --dirsfirst -I 'node_modules|.git|*bower_components|*.pyc' -L "
alias trd="tree -a -d -I '.git'"

sr() {
  echo "replacing $1 with $2 in files matching $3"
  find . -iname "$3" -print | xargs sed -i "s/$1/$2/g"
}
