# TEMPLATES

snippet basic "basic child template" b
{% extends '${1:TEMPLATE}.html' %}

{% block content %}

{% endblock %}

endsnippet

snippet forma "basic ajax form template" b
{% extends request.is_ajax|yesno:"base_ajax.html,base.html" %}

{% block content %}
<div id="${1:ITEM}-wrapper">
<form id="$1-form" method="POST" action="">
	{{ ${2:form}.as_p }}
</form>
<button class="submit" onclick="Submit('${2:POST_URL}', '#$1-form', '$1-wrapper')">Save</button
</div>
{% endblock %}

endsnippet
